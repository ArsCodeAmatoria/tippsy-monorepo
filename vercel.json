{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": null,
  "rootDirectory": "apps/web",
  "installCommand": "cd .. && npm install && cd apps/web && npm install",
  "buildCommand": "cd apps/web && npm run build",
  "outputDirectory": "apps/web/.next",
  "git": {
    "deploymentEnabled": {
      "main": false,
      "vercel-deploy": true
    }
  }
} 